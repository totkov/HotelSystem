@model HotelSystem.Web.ViewModels.User.UserViewModel

@{
    ViewBag.Title = "Add new user";
}

<h2>Add</h2>

<form method="post">
    <div class="form-group">
        <label for="username">Username:</label>
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", id = "username" })
        <p style="color:red">@Html.ValidationMessageFor(m => m.Username)</p>
    </div>
    <div class="form-group">
        <label for="password">Password:</label>
        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", id = "password" })
        <p style="color:red">@Html.ValidationMessageFor(m => m.Password)</p>
    </div>
    <div class="form-group">
        <label for="fname">First name:</label>
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", id = "fname" })
        <p style="color:red">@Html.ValidationMessageFor(m => m.FirstName)</p>
    </div>
    <div class="form-group">
        <label for="lname">Last name:</label>
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", id = "lname" })
        <p style="color:red">@Html.ValidationMessageFor(m => m.LastName)</p>
    </div>
    <div class="form-group">
        <label for="address">Address:</label>
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control", id = "address" })
        <p style="color:red">@Html.ValidationMessageFor(m => m.Address)</p>
    </div>
    <div class="form-group">
        <label for="phone">Phone:</label>
        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", id = "phone" })
        <p style="color:red">@Html.ValidationMessageFor(m => m.Phone)</p>
    </div>
    <div class="form-group">
        <label for="role">Role:</label>
        @Html.EnumDropDownListFor(m => m.Role, new { @class = "form-control", id = "role" })
        <p style="color:red">@Html.ValidationMessageFor(m => m.Role)</p>
    </div>
    @Html.AntiForgeryToken()
    <input type="submit" value="Login" class="btn btn-default" />
</form>