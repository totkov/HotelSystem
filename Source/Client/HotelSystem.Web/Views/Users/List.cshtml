@model List<HotelSystem.Web.ViewModels.User.UserViewModel>

@{
    ViewBag.Title = "Users";
}

<div>
    <h2>Users</h2>
    @Html.ActionLink("Add new", "Add")
    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Address</td>
                <td>@user.Phone</td>
                <td>@user.Role</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = user.Id })
                    @Html.ActionLink("Delete", "Delete", new { id = user.Id })
                </td>
            </tr>
        }
    </table>
</div>

